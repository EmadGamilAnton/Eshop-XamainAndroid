<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_forget_password"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forget_input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_forget_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:hint="Enter Your Email"/>
    </com.google.android.material.textfield.TextInputLayout>

   
    <Button
        android:layout_below="@+id/forget_input_email"
        android:id="@+id/btn_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"/>

    <TextView
        android:layout_below="@+id/btn_forget"
        android:id="@+id/btn_sign_up_fp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:text="Sign Up"
        android:textStyle="bold"
        style="@style/Base.Widget.AppCompat.Button.Borderless"/>
    <LinearLayout
        android:layout_below="@+id/btn_sign_up_fp"
        android:id="@+id/layout_or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#c4c8c9"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="OR"/>
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#c4c8c9"
            android:layout_margin="5dp"/>

    </LinearLayout>
<TextView
        android:layout_below="@+id/layout_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login_fp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:text="Login"
        android:textStyle="bold"
        style="@style/Base.Widget.AppCompat.Button.Borderless"/>

</RelativeLayout>